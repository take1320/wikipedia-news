{
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "eslint.enable": true,
    "eslint.packageManager": "yarn",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
    },
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact"
    ],
  }
  